---
import { getPostImage } from '../utils/getPostImage';
import { categoryLabels } from '../utils/categories';
import { formatDate } from '../utils/formatDate.ts';

const { post } = Astro.props;

// URLs
const postUrl = `/publicaciones/${post.slug}/`;
const categoryUrl = `/categoria/${post.data.category}/1`;

// Imagen con fallback (YouTube â†’ image â†’ default)
const imageSrc = getPostImage(post);

// Fecha formateada
const formattedDate = formatDate(post.data.pubDate);
---
<div class="card h-100 shadow-sm post-card">

  <!-- ðŸ–¼ Imagen -->
  <img
    src={imageSrc}
    class="card-img-top"
    alt={post.data.title}
    loading="lazy"
  />

  <div class="card-body d-flex flex-column">

    <!-- ðŸ“‚ CategorÃ­a + ðŸ“… Fecha -->
    <div class="mb-2 d-flex justify-content-between align-items-center">
      <a
        href={categoryUrl}
        class="badge bg-secondary text-decoration-none"
        aria-label={`Ver categorÃ­a ${categoryLabels[post.data.category]}`}
      >
        {categoryLabels[post.data.category] ?? post.data.category}
      </a>

      <small class="text-muted">
        {formattedDate}
      </small>
    </div>

    <!-- ðŸ“ TÃ­tulo -->
    <h5 class="card-title">
      {post.data.title}
    </h5>

    <!-- ðŸ“„ DescripciÃ³n -->
    <p class="card-text text-muted">
      {post.data.description}
    </p>

    <!-- ðŸ·ï¸ Etiquetas -->
    {post.data.tags && post.data.tags.length > 0 && (
      <div class="mb-3">
        {post.data.tags.map(tag => (
          <a
            href={`/etiquetas/${tag}/1`}
            class="badge bg-light text-dark border me-1 text-decoration-none"
            aria-label={`Filtrar por etiqueta ${tag}`}
          >
            #{tag}
          </a>
        ))}
      </div>
    )}

    <!-- ðŸ”— BotÃ³n -->
    <div class="mt-auto">
      <a
        href={postUrl}
        class="btn btn-primary btn-sm"
        aria-label={`Leer mÃ¡s sobre ${post.data.title}`}
      >
        Leer mÃ¡s
      </a>
    </div>

  </div>
</div>

