---
const { page } = Astro.props;

// Generar array de pÃ¡ginas [1, 2, 3, ...]
const pages = Array.from(
  { length: page.lastPage },
  (_, i) => i + 1
);
---
<nav aria-label="PaginaciÃ³n">
  <ul class="pagination justify-content-center mt-5">

    {page.url.prev && (
      <li class="page-item">
        <a class="page-link" href={page.url.prev}>Anterior</a>
      </li>
    )}

    {pages.map(number => (
      <li class={`page-item ${number === page.currentPage ? 'active' : ''}`}>
        <a class="page-link" href={number === 1 ? './1' : `./${number}`}>
          {number}
        </a>
      </li>
    ))}

    {page.url.next && (
      <li class="page-item">
        <a class="page-link" href={page.url.next}>Siguiente</a>
      </li>
    )}

  </ul>
</nav>

