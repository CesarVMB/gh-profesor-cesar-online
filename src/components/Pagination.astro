---
const { page } = Astro.props;

// No mostrar paginación si solo hay una página
if (page.lastPage <= 1) {
  return null;
}

const firstPageUrl = './1';
const lastPageUrl = `./${page.lastPage}`;
---

<nav aria-label="Paginación">
  <ul class="pagination justify-content-center mt-5">

    <!-- ⏮ Primera -->
    <li class={`page-item ${page.currentPage === 1 ? 'disabled' : ''}`}>
      <a class="page-link" href={firstPageUrl} aria-label="Primera página" title="Primera página">
        &laquo;
      </a>
    </li>

    <!-- ◀ Anterior -->
    <li class={`page-item ${!page.url.prev ? 'disabled' : ''}`}>
      <a
        class="page-link"
        href={page.url.prev ?? '#'}
        aria-label="Página anterior"
        title="Página anterior"
      >
        &lsaquo;
      </a>
    </li>

    <!-- Página actual -->
    <li class="page-item active" aria-current="page">
      <span class="page-link">
        Página {page.currentPage} de {page.lastPage}
      </span>
    </li>

    <!-- Siguiente ▶ -->
    <li class={`page-item ${!page.url.next ? 'disabled' : ''}`}>
      <a
        class="page-link"
        href={page.url.next ?? '#'}
        aria-label="Página siguiente"
        title="Página siguiente"
      >
        &rsaquo;
      </a>
    </li>

    <!-- ⏭ Última -->
    <li class={`page-item ${page.currentPage === page.lastPage ? 'disabled' : ''}`}>
      <a class="page-link" href={lastPageUrl} aria-label="Última página" title="Última página">
        &raquo;
      </a>
    </li>

  </ul>
</nav>

