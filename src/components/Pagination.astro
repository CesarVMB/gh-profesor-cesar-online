---
const { page } = Astro.props;
---
<nav aria-label="PaginaciÃ³n">
  <ul class="pagination justify-content-center mt-5">
    {page.url.prev && (
    <li class="page-item">
      <a class="page-link" href={page.url.prev}>Anterior</a>
    </li>
    )}

    {page.pages.map(p => (
    <li class={`page-item ${p.current ? 'active' : ''}`}>
      <a class="page-link" href={p.url}>{p.number}</a>
    </li>
    ))}

    {page.url.next && (
    <li class="page-item">
      <a class="page-link" href={page.url.next}>Siguiente</a>
    </li>
    )}
  </ul>
</nav>

