---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import YouTubeVideo from '../../components/YouTubeVideo.astro';
import OwnerSignature from '../../components/OwnerSignature.astro';
import RelatedPosts from '../../components/RelatedPosts.astro';

import { getCollection } from 'astro:content';
import { getPostImage } from '../../utils/getPostImage';
import { getYouTubeId } from '../../utils/youtube';
import { getRelatedPosts } from '../../utils/getRelatedPosts';
import { formatDate } from '../../utils/formatDate';

export async function getStaticPaths() {
  const posts = await getCollection('publicaciones');

  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

const youtubeId = getYouTubeId(post.data.youtube);
const imageSrc = getPostImage(post);

// render markdown correctamente (ASTRO OFICIAL)
const { Content } = await post.render();

// related posts 
const allPosts = await getCollection('publicaciones');
const relatedPosts = getRelatedPosts(allPosts, post);

const pageTitle = post.data.title;
const pageDescription = post.data.description;
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>

  <!-- âœ… Breadcrumbs SIN variables intermedias -->
  <Breadcrumbs
    categorySlug={post.data.category}
    extraItems={[
      { label: post.data.title },
    ]}
  />

  <article class="py-4">

    <h1 class="mb-3">{post.data.title}</h1>
    <p class="text-muted">{post.data.description}</p>
    <p class="text-muted mb-4">
      {formatDate(post.data.pubDate)}
    </p>

    {youtubeId ? (
      <YouTubeVideo id={post.data.youtube} />
    ) : (
      <img
        src={imageSrc}
        class="img-fluid mb-4 rounded youtube__image"
        alt={post.data.title}
        loading="lazy"
      />
    )}

    <div class="col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
      <Content />
      <OwnerSignature />
      <RelatedPosts posts={relatedPosts} />
    </div>

  </article>

</BaseLayout>

