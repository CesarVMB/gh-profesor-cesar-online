---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import YouTubeVideo from '../../components/YouTubeVideo.astro';

import { getCollection } from 'astro:content';
import { categories } from '../../data/categories';

export async function getStaticPaths() {
  const posts = await getCollection('publicaciones');

  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

// helpers
const hasYoutube =
  post.data.youtube && post.data.youtube.trim() !== '';

const hasImage =
  post.data.image && post.data.image.trim() !== '';

const imageSrc = hasImage
  ? post.data.image
  : '/images/default.png';

// render markdown correctamente (ASTRO OFICIAL)
const { Content } = await post.render();
---

<BaseLayout title={post.data.title}>

  <!-- âœ… Breadcrumbs SIN variables intermedias -->
  <Breadcrumbs
    categorySlug={post.data.category}
    extraItems={[
      { label: post.data.title },
    ]}
  />

  <article class="container py-4" style="max-width: 800px">

    <h1 class="mb-3">{post.data.title}</h1>
    <p class="text-muted">{post.data.description}</p>
    <p class="text-muted mb-4">
      {post.data.pubDate.toLocaleDateString('es-ES', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
      })}
    </p>

    {/* ğŸ¬ VIDEO */}
    {hasYoutube && (
      <div class="mb-4">
        <YouTubeVideo id={post.data.youtube} />
      </div>
    )}

    {/* ğŸ–¼ï¸ IMAGEN (solo si NO hay video) */}
    {!hasYoutube && (
      <img
        src={imageSrc}
        class="img-fluid rounded mb-4"
        alt={post.data.title}
      />
    )}

    {/* ğŸ“„ CONTENIDO */}
    <div class="content">
      <Content />
    </div>

  </article>

</BaseLayout>

